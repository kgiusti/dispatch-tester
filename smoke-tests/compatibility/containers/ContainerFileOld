FROM quay.io/kgiusti0/qpid-dispatch-router
LABEL description="qdrouterd image for compatibility testing"
MAINTAINER Ken Giusti <kgiusti@gmail.com>

ARG config_file
ENV config_file ${config_file:-qdrouter.conf}

COPY ${config_file} /etc/qpid-dispatch/qdrouterd.conf

ENTRYPOINT ["/sbin/qdrouterd"]
CMD ["-c", "/etc/qpid-dispatch/qdrouterd.conf"]
